package quizAndLabTest;

import java.util.Scanner;

public class LabTest2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		char exit;
		do {
			System.out.print("Enter the number to check Odd or Even: ");
			int num = sc.nextInt();
			
			if(num % 2 == 0) {
				System.out.println("The number is an even number: " +num);
			}else {
				System.out.println("The number is an odd number: " +num);
			}
			
			System.out.println("Continue to test?");
			exit = sc.next().charAt(0);
			System.out.println("");
				
		}while (exit == 'y' );
	
	}

}
